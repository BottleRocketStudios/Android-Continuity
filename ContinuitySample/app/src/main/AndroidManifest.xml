<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.bottlerocketstudios.continuitysample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".core.application.ContinuitySampleApplication">
        <activity android:name=".legislator.ui.FavoriteLegislatorListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".legislator.ui.LegislatorSearchActivity"
            android:parentActivityName=".legislator.ui.FavoriteLegislatorListActivity"
            android:label="@string/lsa_label" />
        <activity android:name=".legislator.ui.LegislatorDetailActivity"/>
    </application>

</manifest>